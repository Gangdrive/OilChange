<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/start_Oil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/oil_change"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        />

    <LinearLayout
        android:id="@+id/start_layout_engine"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/engine_oil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/engine_oil"
            android:padding="10dp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/kilometrage_engine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_press"
            android:text="@string/killometrage_engine"
            android:textSize="14sp" />

        <Button
            android:id="@+id/select_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_press"
            android:text="@string/select_interval"
            android:textSize="14sp" />

        <Button
            android:id="@+id/engine_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_press"
            android:text="@string/engine_history"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/start_layout_oil"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/gerbox_oil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="@string/gerabox_oil" />

        <Button
            android:id="@+id/killometrage_gearbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_press"
            android:text="@string/killometrage_gearbox"
            android:textSize="14sp" />

        <Button
            android:id="@+id/gearbox_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_press"
            android:text="@string/gearbox_history"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>